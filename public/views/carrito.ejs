<!DOCTYPE html>
<html lang="en">
<head>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="../style.css" />

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="https://cdn-icons.flaticon.com/png/512/477/premium/477420.png?token=exp=1655051858~hmac=8e4fa86d16d6faf71249f9d4781dda8e"/>

    <title>Cart</title>
</head>
<body class="bodyCart ">
  <div class="bg-black">
<h1 class=" text-secondary  text-opacity-10" id="titleCart">CART ITEMS</h1>
<span class="hrShop"></span>

</div>
<%- include('../partials/navBar.ejs') %> 

<% if(productosCarrito.length){%> 
  <div class="d-flex justify-content-center align-items-center m-3">
    <a href="/api/carrito/delete" class="text-decoration-none  deleteCart  "><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-trash mb-1 me-2" viewBox="0 0 16 16">
      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
      <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
    </svg>Delete cart  </a>
    </div>
        <div class="d-flex flex-row row ms-2 mb-5 ">
        <% productosCarrito.forEach((productosCarrito ,key) => { %> 
            <div class="cardProduct card  m-3" style="width: 15rem;">
              <img src="../images/<%= productosCarrito.img %>" class="cardImage" width="150px" height="150px" alt="<%= productosCarrito.img %>" >
             
                <div class="card-body   ">
                  <a  class="aLinkToProduct " ><h5 class="card-title"><%= productosCarrito.titulo %></h5></a>
                  <p class=" cardDescrption"><small ><%= productosCarrito.descripcion %> </small></p>
                  <div class="contentPriceAndCode">
                  <p class="  cardPrice">$<%= productosCarrito.precio %> </p>
                  <p class="  cardCode">ID :  <%= productosCarrito.codigo %></p>
                </div>
                 <a href="/api/carrito/delete/<%= productosCarrito.id %> " class="buttonDeleteToCart "><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-trash deleteIcon" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg></a>
                </div>
              </div>
             

              <% }) %>
              
            </div>

    
    <% }else{  %> 
      <div class=" ms-2 mb-5 ">
        <h1 class="  text-dark dontProductText text-opacity-10">There are no products</h1>
      </div>
    <% } %> 
</body>
</html>